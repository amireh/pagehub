<div id="pages" class="resources">

  <div id="resource_actions" class="resource-actionbar actions">
    <!-- <a class="listlike new_resource icon new" tabindex="1" rel="tooltip" data-placement="right" title="Create a new page or folder">New</a> -->
    <a class="listlike with-arrow" rel="tooltip" data-placement="right" title="Create a new page or folder">File</a>
    <ol class="listlike">
      <li>
        <a href="<%= @space.url(true) + '/pages/new' %>" id="new_page" rel="tooltip" data-placement="right" title="Create a new page (Ctrl+Alt+C)">
          <!-- <i class="icon new-page"></i> -->
          New page
        </a>
      </li>
      <li>
        <a href="<%= @space.url(true) + '/folders/new' %>" role="button" rel="tooltip" data-placement="right" data-toggle="modal" id="new_folder" title="Create a new folder (Ctrl+Alt+F)">
          <!-- <i class="icon new-folder"></i> -->
          New folder
        </a>
      </li>
    </ol>
  </div>

  <!-- the scroller is used to enforce a max-height and inject scrollbars when needed -->
  <div id="browser_scroller" class="scroller">
    <ul id="browser" class="browser">
    </ul>
  </div>
</div>
