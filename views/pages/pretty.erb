<% content_for :title do %> <%= @page.title %> | PageHub <% end %>

<% content_for :css do %>
  <link rel="stylesheet" href="/css/code_highlighting.css" />
<% end %>

<% content_for :header do %>
  <% if @public then %>
    <h1><a href="<%= @page.public_url true %>"><%= @page.title %></a></h1>
  <% else %>
    <h1><%= @page.title %></h1>
  <% end %>
<% end %>

<%= @page.content.to_markdown %>